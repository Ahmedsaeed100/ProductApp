
@{
    ViewBag.Title = "Add Product";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Add a New Product</div>
            <div class="panel-wrapper collapse in" aria-expanded="true">
                <div class="panel-body">

                    @*Validation Errors*@
                    <div class="errDiv" style="background: #ff7676; font: #ffffff; margin-bottom: 20px; padding: 5px; display: none;">

                    </div>

                    
                    <!--/span-->
                    <div class="col-md-12" style="text-align:center">
                        <div id="gallery">
                            <label class="control-label">Item Picture</label>
                            <div id="gallery-content">
                                <div id="gallery-content-center">
                                    <img src="~/Photos/noimage.png" id="img0" alt="gallery" class="all studio" />
                                    <style>
                                        .studio {
                                            width: 140px;
                                            height: 140px;
                                            margin: 5px;
                                        }
                                    </style>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/span-->

                    <form action="#" class="form-horizontal" data-toggle="validator">
                        <div class="form-body">
                            <div class="form-group">

                                <div class="row">
                                    <div class="col-md-4">
                                        <label class="control-label">Product Title</label>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input type="text" id="Title" class="form-control" placeholder="Product Title" required>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-4">
                                        <label class="control-label">Product Price </label>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <input type="number" id="Price" min=1 oninput="validity.valid||(value='');" class="form-control clearMR" placeholder="Number">
                                            </div>
                                        </div>
                                    </div>






                                </div>
                            </div>
                            <!--/row-->

                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="control-label">Product Description</label>
                                        <textarea type="text" id="Description" name="txt_Remarks" class="form-control clearMR" placeholder="Text" cols="10" rows="9" required></textarea>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label class="control-label">Number Views 0 / </label>
                                        <label class="control-label">Number impressions 0</label>
                                    </div>
                                </div>

                            </div>

                            <div class="form-actions">
                                <button type="button" id="Adddata" class="btn btn-success"> <i class="fa fa-plus"></i> Add</button>
                                <button type="button" id="Updatedata" class="btn btn-danger MoreMR" style="display:none;"> <i class="fa fa-edit"></i> Update</button>
                            </div>
                        </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading"> Search For a Product</div>
            <div class="panel-wrapper collapse in" aria-expanded="true">
                <div class="panel-body">
                    <form action="#">
                        <div class="form-body" data-toggle="validator">

                            <!--/row-->


                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@*Document Modal*@
<div id="Document-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Documents with your Request ?</h4>
            </div>
            <div class="modal-body">
                <form>

                    <div class="form-group col-md-12">
                        <label class="control-label">File upload</label>
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput"> <i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div> <span class="input-group-addon btn btn-default btn-file">
                                <span class="fileinput-new">Select file</span> <span class="fileinput-exists">Change</span>
                                <input id="UploadDocument" onchange="documentImage(this)" type="file" name="...">
                            </span> <a href="#" id="MyDocument" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer" style="border-top: 0;">
                <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal"> Cancel</button>
                @*<button type="button" onclick="PostMR()" class="btn btn-primary waves-effect" data-dismiss="modal">Submit With Out Document</button>*@
                <button type="button" data-dismiss="modal" class="btn btn-success waves-effect waves-light">Submit</button>
            </div>
        </div>
    </div>
</div>

