<div class="row">
    <div class="col-md-12">
        <div class="panel panel-info">
            <div class="panel-heading">Add a New Product</div>
            <div class="panel-wrapper collapse in" aria-expanded="true">
                <div class="panel-body">

                    @*Validation Errors*@
                    <div class="errDiv" style="background: #ff7676; font: #ffffff; margin-bottom: 20px; padding: 5px; display: none;">

                    </div>


                    <!--/span-->
                    <div class="col-md-12">
                        <div id="gallery">
                            <label class="control-label">Item Picture</label>
                            <div id="gallery-content">
                                <div id="gallery-content-center">
                                    <img src="~/Photos/noimage.png" id="img0" alt="gallery" class="all studio" />
                                    <img src="~/Photos/noimage.png" id="img1" alt="gallery" class="all studio" />
                                    <img src="~/Photos/noimage.png" id="img2" alt="gallery" class="all studio" />
                                    <img src="~/Photos/noimage.png" id="img3" alt="gallery" class="all studio" />
                                    <style>
                                        .studio {
                                            width: 140px;
